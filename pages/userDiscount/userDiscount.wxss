/**index.wxss**/
@import "../../wxParse/wxParse.wxss"
page{
	background:#f2f2f2;
}

.tabs{
	height:80rpx;
	border-bottom:solid 1px #e0e0e0;
	background:#fff;
	margin-bottom: 20rpx;
}
.tabs_item{
	width:25%;
	text-align:center;
	height:80rpx;
	line-height:80rpx;
}
.tabs_this{
	color:#e83632;
	border-bottom:solid 1px #e83632;
}
.tabs_item text{
	height:78rpx;
	line-height:78rpx;
	display:inline-block;
}
.store_discount{
	border-radius:20rpx;
	background:#fff;
	padding-bottom:20rpx;
}
.discount_box{
	width:100%;
	height:160rpx;
	border-radius: 20rpx;
	margin-bottom:20rpx;
}
.discount_left{
	width:13%;
	height:100%;
	position:relative;
	background: #fff3f2;
}
.discount_sort{
	width:110rpx;
	height: 110rpx;
	position: absolute;
	left:0rpx;
	top:0;
	transform: rotate(-45deg);
	text-align: center;
}
.discount_center{
	width:62.5%;
	height:100%;
	background: #fff3f2;
	border-radius:0 20rpx 20rpx 0;
}
.line{
	width:1px;
	height:90%;
	border-right: dashed 1px #e83632;
}
.discount_right{
	width:24.5%;
	height:100%;
	border-radius:20rpx 0rpx 0 20rpx;
	background: #fff3f2;
}
.discount_cont{
	width:100%;
	height:100%;
}
.discount_center text{
	font-size: 50rpx;
}
.get_discout{
	width:122rpx;
	height:54rpx;
	border-radius: 16rpx;
	text-align:center;
	border: none;
	line-height: 54rpx;
	margin:0 auto;
	background:#e83632;
}
.discount_left image{
	width:92rpx;
	height: 92rpx;
}
