
.pay_number{
	width:100%;
	height:60rpx;
	margin:40rpx 0;
}
.pay_number input{
	width:82%;
	height:60rpx;
	border:solid 1px #c4010c;
	border-radius:10rpx;
	line-height:60rpx;
	padding:1%;
}
.pay_number>view{
	width:12%;
	text-align: center;
}
.tickit{
	width:100%;
}
.tickit_left{
	width:85%;
}
.tickit_right{
	width:15%;
	text-align: right;
}
