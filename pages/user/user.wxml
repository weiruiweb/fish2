<view class="user_banner">
    <image src="/images/user_banner.png"></image>
    <view class="user_box w710 flex">
        <view style="width:100%;">
            <view class="" style="text-align:center;width:100%;">
                <view class="user_img">
                  <open-data type="userAvatarUrl"></open-data>
                </view>
            </view>
            <view class="font32 color1" style="text-align: center;"><open-data  type="userNickName" ></open-data></view>
        </view>
       
            
          
    </view>
</view>
<view class="user_all font30 color3">
    <view class="user_infor flexRowBetween w710"  bindtap="intoPath" data-path="/pages/userRecord/userRecord">
